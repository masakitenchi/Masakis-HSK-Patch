<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Save Our Ship 2</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="SpaceCannibal"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>3</min>
								<max>6</max>
							</primaryMagazineCount>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="SpaceCrew"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>2</min>
								<max>3</max>
							</primaryMagazineCount>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="SpaceCrewMarine"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>3</min>
								<max>5</max>
							</primaryMagazineCount>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/PawnKindDef[defName="SpaceCrewMarineHeavy"]</xpath>
					<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
								<min>4</min>
								<max>6</max>
							</primaryMagazineCount>
						</li>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="SpaceCrewEVA"]/apparelMoney</xpath>
					<value>
						<apparelMoney>1500~2000</apparelMoney>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="SpaceCrewEVA"]/weaponMoney</xpath>
					<value>
						<weaponMoney>1000~2000</weaponMoney>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="SpaceCrewMarine"]/apparelMoney</xpath>
					<value>
						<apparelMoney>2000~4000</apparelMoney>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="SpaceCrewMarine"]/weaponMoney</xpath>
					<value>
						<weaponMoney>2000~3000</weaponMoney>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="SpaceCrewMarineHeavy"]/apparelMoney</xpath>
					<value>
						<apparelMoney>5000~6000</apparelMoney>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="SpaceCrewMarineHeavy"]/weaponMoney</xpath>
					<value>
						<weaponMoney>3500~5000</weaponMoney>
					</value>
				</li>

			</operations>
		</match>
	</Operation>

</Patch>