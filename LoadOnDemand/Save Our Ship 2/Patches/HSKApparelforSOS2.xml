<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Save Our Ship 2</li>
	</mods>
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- ========== Apparel_Fullarmor_Spacer ========== -->
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[@Name="ApparelSpacerSimpleBase"]/comps</xpath>
					<match Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[@Name="ApparelSpacerSimpleBase"]/comps</xpath>
						<value>
							<li>
								<compClass>SaveOurShip2.Comp_EVA</compClass>
							</li>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[@Name="ApparelSpacerSimpleBase"]</xpath>
						<value>
							<comps>
								<li>
									<compClass>SaveOurShip2.Comp_EVA</compClass>
								</li>
							</comps>
						</value>
					</nomatch>
				</li>
				
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[@Name="ArmorSpacerSimpleBase"]/comps</xpath>
					<match Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[@Name="ArmorSpacerSimpleBase"]/comps</xpath>
						<value>
							<li>
								<compClass>SaveOurShip2.Comp_EVA</compClass>
							</li>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[@Name="ArmorSpacerSimpleBase"]</xpath>
						<value>
							<comps>
								<li>
									<compClass>SaveOurShip2.Comp_EVA</compClass>
								</li>
							</comps>
						</value>
					</nomatch>
				</li>
				
			</operations>
		</match>
    </Operation>
	
</Patch>